{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react",
    "outDir": "lib",
    "declaration": true,
    "rootDirs": ["src"],
    "resolveJsonModule": true,
    "inlineSourceMap": true,
    "skipLibCheck": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": [
    "src/**/*.test.tsx",
    "*/__tests__/**/*",
    "coverage",
    "node_modules"
  ]
}
